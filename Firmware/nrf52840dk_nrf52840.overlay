&uart0 {
    status = "okay";
    current-speed = <115200>;
    tx-pin = <22>;
    rx-pin = <17>;
    rts-pin = <0xFFFFFFFF>;
    cts-pin = <0xFFFFFFFF>;
    label="uart";
};

&spi0 {
    compatible = "nordic,nrf-spim";
    status = "okay";
    sck-pin = <15>;
    mosi-pin = <14>; //DIN
    miso-pin = <34>; //DOUT
    label="spi0";
    cs-gpios = <&gpio1 32 GPIO_ACTIVE_LOW>, <&gpio1 4 GPIO_ACTIVE_LOW>;

    ads131m08_0: ads131m08@0 {
        status = "okay";
        reg = <0>;
        label = "ADS131M08_0";
    };

    ads131m08_1: ads131m08@1 {
        status = "okay";
        reg = <1>;
        label = "ADS131M08_1";
    };
};

&spi1 {
    status = "disabled";
};

&i2c0 {
    status = "disabled";
};
&i2c1 {
    status = "okay";
    sda-pin = <5>;
    scl-pin = <3>;
    max30102@57 {
        compatible = "maxim,max30102";
        label = "MAX30102";
        reg = <0x57>;
        mode = <2>;
        status = "okay";
    };
    bme280: bme280@76 {
        /* 0x76 - SDO <-> GND */
        /* 0x77 - SDO <-> VCC */
        compatible = "bosch,bme280";
        reg = <0x76>;
        label = "ENVIRONMENTAL_SENSOR";
    };
};

&zephyr_udc0 {
    cdc_acm_uart0 {
        compatible = "zephyr,cdc-acm-uart";
        label = "CDC_ACM_0";
    };
};